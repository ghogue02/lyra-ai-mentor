# Production Environment Configuration
# ===================================
# This is an example of production environment variables.
# Copy this to .env.production.local and fill with actual production values.
# NEVER commit .env.production.local to version control.

# Application Environment
# ---------------------
NODE_ENV=production
VITE_APP_URL=https://yourdomain.com
VITE_API_VERSION=v1

# OpenAI Configuration (Required)
# ------------------------------
# Use a production API key with appropriate rate limits
VITE_OPENAI_API_KEY=sk-prod-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_OPENAI_MODEL_TEXT=gpt-4o-mini
VITE_OPENAI_MODEL_HIGH_QUALITY=gpt-4o
VITE_OPENAI_MODEL_FAST=gpt-3.5-turbo

# Supabase Configuration (Required)
# --------------------------------
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key
# Service role key should be stored securely and only used server-side
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# Voice Service Configuration
# --------------------------
VITE_TTS_MODEL=tts-1
VITE_TTS_VOICE=alloy
VITE_STT_MODEL=whisper-1
VITE_STT_LANGUAGE=en

# Image Generation Configuration
# -----------------------------
VITE_IMAGE_MODEL=dall-e-3
VITE_IMAGE_SIZE=1024x1024
VITE_IMAGE_QUALITY=standard
VITE_IMAGE_STYLE=vivid

# Production Rate Limiting
# -----------------------
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=100
VITE_RATE_LIMIT_REQUESTS_PER_HOUR=1000
VITE_RATE_LIMIT_TOKENS_PER_MINUTE=80000
VITE_COST_LIMIT_PER_DAY_USD=50
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY_MS=2000

# Production Caching
# -----------------
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL_MS=600000 # 10 minutes
VITE_CACHE_MAX_SIZE=200

# Analytics Configuration
# ----------------------
VITE_ANALYTICS_ID=your_production_analytics_id
VITE_ANALYTICS_ENABLED=true
VITE_PERFORMANCE_MONITORING_ENABLED=true

# Production Feature Flags
# -----------------------
VITE_FEATURE_STREAMING_ENABLED=true
VITE_FEATURE_FALLBACK_TO_MOCK=false # Disable mocks in production
VITE_FEATURE_COST_TRACKING=true
VITE_FEATURE_MULTIMODAL_ENABLED=true
VITE_FEATURE_VOICE_ENABLED=true

# Production Error Handling
# ------------------------
VITE_ERROR_SHOW_API_ERRORS=false # Hide technical errors from users
VITE_ERROR_FALLBACK_TIMEOUT_MS=10000
VITE_ERROR_REPORTING_ENABLED=true

# Security Configuration
# ---------------------
VITE_CSP_ENABLED=true
VITE_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
VITE_API_KEY_ROTATION_DAYS=30 # More frequent rotation in production
VITE_SESSION_TIMEOUT_MINUTES=30 # Shorter timeout for security

# Production Development Tools (All disabled)
# ------------------------------------------
VITE_DEV_SHOW_DEBUG_INFO=false
VITE_DEV_LOG_LEVEL=error
VITE_DEV_MOCK_DELAY_MS=0