# AI Learning Hub Environment Variables
# =====================================
# This file contains all environment variables used by the application.
# Copy this file to .env.local and fill in the actual values.
# DO NOT commit .env.local to version control.

# Application Environment
# ---------------------
NODE_ENV=development # Options: development, production, test
VITE_APP_URL=http://localhost:8080 # Base URL of the application
VITE_API_VERSION=v1 # API version prefix

# OpenAI Configuration (Required for AI features)
# ----------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL_TEXT=gpt-4o-mini # Default text generation model
VITE_OPENAI_MODEL_HIGH_QUALITY=gpt-4o # High quality model for complex tasks
VITE_OPENAI_MODEL_FAST=gpt-3.5-turbo # Fast model for quick responses

# VITE API KEYS (Required for Live AI in Prototype Studio)
# ---------------------------------------------------------
# OpenAI API key for live AI responses using GPT-4o model
# Use VITE_OPENAI_API_KEY (preferred) or REACT_APP_OPENAI_API_KEY (fallback)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration (Required)
# --------------------------------
# Get these from your Supabase project settings: https://app.supabase.com
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key # Only for server-side operations

# Voice Service Configuration (Optional)
# ------------------------------------
VITE_TTS_MODEL=tts-1 # Options: tts-1, tts-1-hd
VITE_TTS_VOICE=alloy # Options: alloy, echo, fable, onyx, nova, shimmer
VITE_STT_MODEL=whisper-1 # Speech-to-text model
VITE_STT_LANGUAGE=en # Default language for transcription

# Image Generation Configuration (Optional)
# ---------------------------------------
VITE_IMAGE_MODEL=dall-e-3 # Options: dall-e-3, dall-e-2
VITE_IMAGE_SIZE=1024x1024 # Options: 256x256, 512x512, 1024x1024
VITE_IMAGE_QUALITY=standard # Options: standard, hd
VITE_IMAGE_STYLE=vivid # Options: vivid, natural

# Rate Limiting and Cost Control
# -----------------------------
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=50
VITE_RATE_LIMIT_REQUESTS_PER_HOUR=500
VITE_RATE_LIMIT_TOKENS_PER_MINUTE=40000
VITE_COST_LIMIT_PER_DAY_USD=20
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY_MS=1000

# Caching Configuration
# --------------------
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL_MS=300000 # 5 minutes in milliseconds
VITE_CACHE_MAX_SIZE=100

# Analytics Configuration (Optional)
# --------------------------------
VITE_ANALYTICS_ID=your_analytics_id
VITE_ANALYTICS_ENABLED=true
VITE_PERFORMANCE_MONITORING_ENABLED=true

# Feature Flags
# ------------
VITE_FEATURE_STREAMING_ENABLED=true
VITE_FEATURE_FALLBACK_TO_MOCK=true # Enable mock responses on API failure
VITE_FEATURE_COST_TRACKING=true
VITE_FEATURE_MULTIMODAL_ENABLED=true
VITE_FEATURE_VOICE_ENABLED=true

# MCP SWARM CONFIGURATION (For Advanced AI Coordination)
# --------------------------------------------------------
# Enable/disable swarm orchestration features
REACT_APP_ENABLE_SWARM_COORDINATION=true
REACT_APP_ENABLE_NEURAL_TRAINING=true
REACT_APP_ENABLE_MEMORY_PERSISTENCE=true
REACT_APP_ENABLE_DAA_AGENTS=true

# Swarm Performance Settings
REACT_APP_SWARM_MAX_AGENTS=12
REACT_APP_SWARM_TOPOLOGY=hierarchical # Options: hierarchical, mesh, ring, star
REACT_APP_SWARM_STRATEGY=adaptive # Options: adaptive, parallel, sequential, balanced

# AI Response Configuration for Live Prototype Studio
REACT_APP_AI_MAX_TOKENS=800
REACT_APP_AI_TEMPERATURE=0.7
REACT_APP_AI_TIMEOUT=30000

# Error Handling
# -------------
VITE_ERROR_SHOW_API_ERRORS=false # Show technical errors to users
VITE_ERROR_FALLBACK_TIMEOUT_MS=5000
VITE_ERROR_REPORTING_ENABLED=true

# Security Configuration
# --------------------
VITE_CSP_ENABLED=true # Content Security Policy
VITE_CORS_ALLOWED_ORIGINS=http://localhost:8080,https://yourdomain.com
VITE_API_KEY_ROTATION_DAYS=90 # Days before API key rotation reminder
VITE_SESSION_TIMEOUT_MINUTES=60

# Development Tools (Development Only)
# ----------------------------------
VITE_DEV_SHOW_DEBUG_INFO=true
VITE_DEV_LOG_LEVEL=debug # Options: error, warn, info, debug
VITE_DEV_MOCK_DELAY_MS=0 # Artificial delay for mock responses